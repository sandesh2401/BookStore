@page
@model LoginModel

@* @{
    ViewData["Title"] = "";
} *@

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<h1 class="login-title"><i class="fa-solid fa-sign-in-alt icon"></i>Log In</h1>

<style>
