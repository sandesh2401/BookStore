@page
@model RegisterModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<h1 class="register-title"><i class="fa-solid fa-user-plus icon"></i>Register</h1>
<style>
    /* body {
        background-image: url('https://wallpapers.com/images/hd/book-background-fe1vlrrmvaabwo8l.jpg'); /* Path to your image */
        background-size: cover; /* Ensures the image covers the entire background */
