﻿@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<h1 class="admin-title"><i class="fa-solid fa-users"></i> All Roles</h1>

<a class="btn btn-success mb-2" asp-action="AddRole"><i class="fa-solid fa-users"></i> Add Role</a>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-lg">
            <thead class="bg-gradient-primary text-white text-center align-middle">
                <tr>
                    <td><h5>Role</h5></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr class="align-middle bg-light-green">
                        <td>@role.Name</td>
                        <td class="text-center">
                            <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h5 class="text-center">No roles yet, use the button above to add your first role.</h5>
}

<style>
    .admin-title {
        color: black; /* Sets the text color to black */
        font-size: 2.5rem; /* Adjust font size as needed */
        font-weight: bold; /* Makes the text bold */
        text-align: center; /* Center-align the text */
        margin: 2rem 0; /* Adjust top and bottom margin */
    }

    .bg-gradient-primary {
        background: #34a853;
    }

    .table thead th {
        background-color: #34a853;
        color: white;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-primary, .btn-success, .btn-danger, .btn-warning {
        background-color: #34a853;
        border-color: #34a853;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #e0a800;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

    .table-bordered {
        border: 2px solid black;
    }

        .table-bordered th, .table-bordered td {
            border: 1px solid black;
        }

    .text-info {
        color: #17a2b8;
    }

    .text-success {
        color: #28a745;
    }

    .text-black {
        color: black;
    }

    .fw-bold {
        font-weight: 700;
    }

    .description-cell {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .a-cleanup {
        text-decoration: none;
        color: inherit;
    }

    .badge-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-lg {
        font-size: 1.25rem;
        padding: 0.5rem 1rem;
    }

    .bg-light-green {
        background-color: #f8f9fa; /* Light green for alternate rows */
    }

    .bg-dark-green {
        background-color: #c3e6cb; /* Darker green for alternate rows */
    }
</style>


