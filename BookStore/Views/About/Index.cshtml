        .about-page {
            position: relative; /* Ensure relative positioning for pseudo-element */
            overflow: auto; /* Prevent scrolling issues */
            background-size: cover; /* Ensures the image covers the entire background */
            background-repeat: no-repeat; /* Prevents the image from repeating */
            background-position: center; /* Centers the background image */
            background-attachment: fixed; /* Keeps the background fixed when scrolling */
        }

        .about-page::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://img.freepik.com/premium-photo/bookshelves-with-many-books-library-blurred-background-with-window_646632-2378.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            filter: blur(8px); /* Adjust blur level as needed */
            z-index: -1; /* Ensure the blur effect is behind the content */
        }

        .container {
            position: relative;
            z-index: 1; /* Ensure content is above the blurred background */
        }

        .text-muted {
            color: #34a853 !important;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .card {
            border-radius: 10px; /* Rounded corners for cards */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a subtle shadow */
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-10px); /* Slight lift effect on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3); /* Enhanced shadow on hover */
        }

        .card-img-top {
            height: 250px; /* Adjust height */
            width: 100%; /* Full width */
            object-fit: contain; /* Crop the image to fit */
        }

        .card-body {
            background: rgba(255, 255, 255, 0.8); /* Light background for text readability */
            border-top: 1px solid #e0e0e0; /* Subtle border on top */
            padding: 20px; /* Consistent padding */
        }

        .d-flex {
            display: flex;
            justify-content: center; /* Center icons */
            gap: 15px; /* Spacing between icons */
        }

        .bi, .fab, .fas {
            font-size: 24px;
            color: #34a853; /* Icon color */
            transition: color 0.3s;
        }

        .bi:hover, .fab:hover, .fas:hover {
            color: #000; /* Change color on hover */
        }

        @@media (max-width: 600px) {
            .card-img-top {
                height: 200px; /* Adjust height for smaller screens */
            }
        }
    </style>
        
</head>

