@using Microsoft.AspNetCore.Identity
@using BookStore.Models

@inject SignInManager<DefaultUser> SignInManager
@inject UserManager<DefaultUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" >
            <a id="manage" class="nav-link text-dark btn btn-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white btn btn-danger">Logout</button>
            </form>
        </li>
    }
    else
    {

            <li class="nav-item">
            <a class="nav-link text-white btn btn-success" style="margin-right:15px;" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-white btn btn-info" style="margin-right:15px;" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
       
   
    }
</ul>
